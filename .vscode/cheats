game.player.force.chart_all()
local r=1024 ; game.player.force.character_build_distance_bonus = r ; game.player.force.character_reach_distance_bonus = r
local s=1000 ; game.player.force.manual_mining_speed_modifier = s ; game.player.force.manual_crafting_speed_modifier = s
game.player.force.research_all_technologies()
game.player.cheat_mode=true
game.player.force.character_inventory_slots_bonus = 100
game.speed = 2
game.map_settings.pollution.enabled = false
game.player.clear_items_inside()
game.player.surface.always_day=true
